<div class="card-category-no-curve" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(https://www.securitysafetyproducts.co.uk/images/upload/products_image2-1672-d.jpg)">
  Login
</div>
<div class="container-new-form">
  <div class="form-new">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
      data: {turbo: false}) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions button-div">
        <%= f.button :submit, "Log in", class:"btn-new" %>
      </div>
    <% end %>

    <div class="shared-links">
      <%= render "devise/shared/links" %>
    </div>

  </div>
</div>
