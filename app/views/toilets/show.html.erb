<div class="container">
  <div class="showpage-container">


    <div class="description-container">
    <%= cl_image_tag @toilet.photo.key, crop: :fill, class:"my-custom-img" %>
      <div class="card-product">
        <p><strong>Name:</strong> <%= @toilet.name %></p>
        <hr>
        <p><strong>Description:</strong> <%= @toilet.description %>
        </p>
        <hr>
        <p><strong>Price:</strong> Â£<%= @toilet.price %></p>
      </div>
    </div>

    <div class="my-customised-settings card-product-booking">

      <% if current_user != @toilet.user %>
        <%= simple_form_for [@toilet, @booking] do |f| %>
          <%= f.input :start_date %>
          <%= f.input :end_date %>
          <div class="button-div">
            <%= f.submit "Book", class: "btn-show" %>
          </div>
        <% end %>
      <% end %>

      <% if current_user == @toilet.user %>
        <%= simple_form_for(@toilet) do |f| %>
          <%= f.input :name %>
          <%= f.input :description %>
          <%= f.input :price %>
          <%= f.input :photo, as: :file %>
          <div class="button-div">
            <%= f.submit "Update", class: "btn-show", data: {turbo_method: :update} %>
            <%= link_to "Delete", toilet_path(@toilet), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn-show-delete" %>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
